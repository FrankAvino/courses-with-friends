<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title %></title>
    <link href='http://fonts.googleapis.com/css?family=Roboto:900,400,700,400italic,300italic,500,100italic,700italic,300,900italic,100,500italic' rel='stylesheet' type='text/css'>
    
    <%= stylesheet_link_tag "normalize", "styles" %>
  </head>
  
  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>